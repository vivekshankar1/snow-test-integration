        <script><![CDATA[(function executeRule(current, previous /*null when async*/ ) {
    var logger = new Logger();
    var jsonUtil = new JsonUtil();
    var automateApi = new AutomateApi(current.instance, current.api_token.getDecryptedValue());
	var name = automateApi.getName();
	current.name = name;
    try {
        logger.debug("Adding secret");
        var secretId = automateApi.addSecret(name, current.servicenow_user, current.servicenow_password.getDecryptedValue());
        current.secret_id = secretId;

        var destinationId = automateApi.addDestination(name, secretId);
        current.destination_id = destinationId;
        current.setWorkflow(false);
        current.update();
    } catch (ex) {
        logger.errorWithStack("Error calling automate secrets API", ex);
    }
})(current, previous);]]></script>
